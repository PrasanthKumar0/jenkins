pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout([$class: 'GitSCM', branches: [[name: 'main']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/PrasanthKumar0/jenkins.git']]])
                }
            }
        }

        stage('Terraform Init') {
            steps {
                script {
                    dir('jenkins/main.tf') {  
                        sh 'terraform init'
                    }
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                script {
                    dir('jenkins/main.tf') {
                        sh 'terraform plan -out=tfplan'
                    }
                }
            }
        }

        stage('Terraform Apply') {
            when {
                expression { params.AUTO_APPROVE == 'true' }
            }
            steps {
                script {
                    dir('jenkins/main.tf') {
                        sh 'terraform apply -auto-approve tfplan'
                    }
                }
            }
        }
    }
}
